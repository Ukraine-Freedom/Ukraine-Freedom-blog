---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

const { data: { title, description, publishDate, coverimage, alttextimage, content, tags }, lastUpdated } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style></style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{coverimage && <img width={1020} height={510} src={coverimage} alt={alttextimage} />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={new Date(publishDate ?? lastUpdated)} />
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<Fragment set:html={content} />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
