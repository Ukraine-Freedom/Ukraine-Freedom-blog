---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogBottomSection from '../components/BlogBottomSection.astro';

const builderApiPublicKey = import.meta.env.BUILDER_API_PUBLIC_KEY;
const builderModel = import.meta.env.BUILDER_HOMEPAGE_MODEL;

const { data: { title, description, html } } = await fetch(
	`https://cdn.builder.io/api/v3/html/${builderModel}?${new URLSearchParams({
		apiKey: builderApiPublicKey,
		cachebust: "true",
	}).toString()}`
)
	.then((res) => res.json())
	.catch();
---

<style>
  section.blue {
    background-color: var(--color-light-blue);
  }
  section.dark-white{
    background-color: var(--color-light-gray);
  }
  section.black {
    background-color: var(--color-black);
  }
  section > div.content {
    max-width: 1170px;
    margin: 0 auto;
    padding: 20px 0;
    text-align: center;
    position: relative;
    z-index: 1;
  }
  .flexible-row {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: center;
    width: 100vw;
  }
  .flexible-column {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-family: Inter;
    margin: 90px 0 40px 0;
    padding: 15px 0;
  }
  section h1 {
    font-size: 48px;
    padding: 0 30px;
    overflow-wrap: break-word;
  }
  .flexible-column .item {
    padding: 2rem 3rem;
    font-family: Inter;
    font-size: 26px;
    font-weight: 400;
    max-width: 20%;
    color: var(--color-gray);
    line-height: 1.3em;
  }
  .flexible-column.zero {
    margin:0;
    padding:0;
  }
  .flexible-column.gap-1.5 {
    gap: 1.5em;
  }
  section.volunteer {
    min-height: 1000px;
    position: relative;
    color: var(--color-white);
  }
  section.volunteer .background {
    opacity: 0.3;
    position: absolute;
    top: 0;
    height: 100%;
    width: 100%;
    background: url("/6405fba6d6f4795790151a6a.jpeg") no-repeat 50% center;
    background-size: cover;
  }
  section.volunteer h1 {
    padding: 0 80px 60px;
  }
  .card {
    width: 86%;
    min-height: 1px;
    height: 100%;
    background-color: var(--color-light-blue);
    padding: 0 2%;
    border-radius: 20px;
    box-shadow: 0 6px 6px 0 rgba(var(--black),0.3);
    justify-content: flex-start;
    margin: 1rem;
    max-width: 30%;
  }
  .card > div {
    margin: 40px 0 40px 0;
    height: 100%;
  }
  @media (max-width: 765px){
    .flexible-row {
      flex-direction: column;
      padding: 20px 0;
    }
    .flexible-column .item {
      width: calc(100% - 20px);
      padding: 10px;
      max-width: 100%;
    }
  }
</style>

