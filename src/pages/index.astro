---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogBottomSection from '../components/BlogBottomSection.astro';

const builderApiPublicKey = import.meta.env.BUILDER_API_PUBLIC_KEY;
const builderModel = import.meta.env.BUILDER_HOMEPAGE_MODEL;

const { data: { title, description, html } } = await fetch(
	`https://cdn.builder.io/api/v3/html/${builderModel}?${new URLSearchParams({
		apiKey: builderApiPublicKey,
		cachebust: "true",
	}).toString()}`
)
	.then((res) => res.json())
	.catch();
---

<style>
  .blue {
    background-color: #f0f5ff;
  }
  .dark-white{
    background-color: var(--color-l9fxo0ia);
  }
  .content {
    max-width: 1170px;
    margin: 0 auto;
    padding: 20px 0;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .flexible-row {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: center;
    padding: auto;
    width: 100vw;
  }
  .flexible-column{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-family: Inter;
    margin: 90px 0 40px 0;
    padding: 15px 0;
  }
  .flexible-column h1 {
    font-size: 48px!important;
    padding: 0 30px;
    overflow-wrap:break-word;
  }

  .item{
    padding: 2rem 3rem;
    font-family: Inter;
    font-size: 26px!important;
    font-weight: 400;
    max-width: 20%;
    color:var(--color-ldnf8plo);
    line-height: 1.3em;
  }

  .item p{
      margin: unset;
    } 

  .zero svg, .volunteer svg{
    margin-bottom: 20px;
  }

  .zero{
    margin:0;
    padding:0;
    font-size: 24px!important;
  }
  .gap{
    gap: 1.5em;
  }
  .paragraph {
    font-size: 30px!important;
    color: var(--color-ldnf8plo);
    font-weight: 400;
    line-height:1.3em;
  }
  .donate-button {
    background: #2337ff;
    padding: 16px 20px;
    color: white;
    text-transform: uppercase;
    font-weight: bold;
    font-size: 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
  .volunteer{
    min-height: 1000px;
    background: #0e0f11;
    position: relative;
  }
  .volunteer .background {
    opacity: 0.3;
    position: absolute;
    top: 0;
    height: 100%;
    width: 100%;
    background: url("/6405fba6d6f4795790151a6a.jpeg") no-repeat 50% center;
    background-size: cover;
  }

  .volunteer h1,  .volunteer p{
    color: white;
  }
  .volunteer h1{
    padding: 0 80px 60px 80px;
  }
  .volunteer p {
    font-size: 24px;
    font-weight: 400;
  }
  .margin{
    margin: 20px 0;
  }

  @media (max-width: 765px){
    .flexible-row {
      flex-direction: column;
      padding: 20px 0;
    }
    .item{
      width: calc(100% - 20px);
      padding: 10px;
      max-width: 100%;
    }

  }

</style>

